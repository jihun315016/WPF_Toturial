        <Label x:Name="lbl" Content="안녕하세요."></Label>
        <Label Content="Label" HorizontalAlignment="Left" Margin="145,108,0,0" VerticalAlignment="Top"/>
        <Button Content="클릭"/>
        <Button>Click</Button>
        <Label>레이블</Label>
    </StackPanel>
