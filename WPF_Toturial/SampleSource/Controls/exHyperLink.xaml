<Window x:Class="SampleSource.exHyperLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleSource"
        mc:Ignorable="d"
        Title="exHyperLink" Height="450" Width="800">
    <StackPanel>
        <TextBlock>
            <Hyperlink x:Name="link"
                       TextDecorations="None"
                       MouseEnter="link_MouseEnter"
                       MouseLeave="link_MouseLeave"
                       RequestNavigate="link_RequestNavigate"
                       NavigateUri="https://www.google.com">
            Hyperlink is ...
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>