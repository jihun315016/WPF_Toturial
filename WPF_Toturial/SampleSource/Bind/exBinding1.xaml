<Window x:Class="SampleSource.Bind.exBinding1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleSource.Bind"
        mc:Ignorable="d"
        Title="exBinding" Height="450" Width="800">
    
    <StackPanel>
        <!-- Content 값을 txt 컨트롤의 Text 속성에 바인딩 -->
        <Label x:Name="lbl1" Content="{Binding ElementName=txt1, Path=Text}"/>
        <TextBox x:Name="txt1"/>

        <!-- 소스로 바인딩 적용 -->
        <Label x:Name="lbl2"/>
        <TextBox x:Name="txt2"/>
    </StackPanel>
    
</Window>
